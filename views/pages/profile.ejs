    <div style="position: absolute;top:210px;bottom:70px;right:20%;left:20%;">
      <textarea id="tts"
        style="text-align:left;font-family: sans-serif;outline: none;border-color: #37a7bb;border-radius: 10px;resize: none;width:100%;height:100%;"
        placeholder="
              Write something in this box and click play.
              Our text-to-speech will read it out loud for you.
              Go ahead, enjoy listening to written content :)">
                <% if(typeof errors!= 'undefined') {%>
                    <% errors.forEach(error=>{ %>
                       <%= error.message %>
                    <%}) %>
                    <%}%>
            
            </textarea>
            
      <textarea id="text_box_mirror" style="font-family: sans-serif;visibility:hidden;"></textarea>
    </div>



